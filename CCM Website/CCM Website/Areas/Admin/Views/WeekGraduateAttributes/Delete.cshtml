@model CCM_Website.Models.WeekGraduateAttributes

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb d-flex justify-content-start">
        <li><button class="btn btn-primary me-3" onclick="history.back();">Back</button></li>
        <div class="d-flex m-2">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Admin" asp-action="Index">Admin</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="WeekGraduateAttributes" asp-action="Index">Week Graduate Attributes</a></li>
        <li class="breadcrumb-item active" aria-current="page">Delete</li>
        </div>
    </ol>
    <hr />
</nav>

<div class="row my-3 align-items-start">
    <div class="col-md-10"><h2>Delete</h2></div>
    <hr />
</div>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Week ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Week.WeekId)
        </dd>
        <dt class="col-sm-2">
            Graduate Attribute ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GraduateAttribute.AttributeId)
        </dd>
        <dt class="col-sm-2">
            Graduate Attribute Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GraduateAttribute.AttributeName)
        </dd>
    </dl>

    <form asp-action="Delete" method="post" class="d-flex gap-2">
        <input type="hidden" name="weekId" value="@Model.WeekId" />
        <input type="hidden" name="graduateAttributeId" value="@Model.GraduateAttributeId" />

        <button type="button" class="btn btn-danger" id="deleteB">Delete</button>
        <button type="submit" class="btn btn-danger d-none" id="confirm">Confirm</button>
        <a class="btn btn-secondary" asp-action="Index">Cancel</a>
    </form>
</div>

<script>
    var deleteB = document.getElementById("deleteB");
    var confirm = document.getElementById("confirm");

    deleteB.onclick = function(){
        deleteB.classList.add("d-none");
        confirm.classList.remove("d-none");
    }
</script>
