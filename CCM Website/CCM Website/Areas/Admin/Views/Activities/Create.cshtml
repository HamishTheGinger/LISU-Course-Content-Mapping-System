@model CCM_Website.Models.Activities

@{
    ViewData["Title"] = "Create Activity";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    var selectedPlatformId = ViewBag.SelectedPlatformId ?? 0; // This would be set when you post the form

}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Admin" asp-action="Index">Admin</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Activities" asp-action="Index">Activities</a></li>
        <li class="breadcrumb-item active" aria-current="page">Create</li>
    </ol>
</nav>

<div class="row">
    <div class="col"><h1>Create Activity</h1></div>
    <div class="col text-end"><button class="btn btn-primary" onclick="history.back();">Back</button></div>
</div>

<hr />
@Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <div class="form-group">
                <label asp-for="ActivityName" class="control-label"></label>
                <input asp-for="ActivityName" class="form-control" />
                <span asp-validation-for="ActivityName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LearningPlatformActivities" class="control-label"></label>
                <select asp-for="LearningPlatformActivities" class="form-select form-control">
                    <option value="">-- Select a Platform --</option>
                    @foreach (var platform in (ViewBag.LearningPlatforms as SelectList) ?? new SelectList(Enumerable.Empty<SelectListItem>()))
                    {
                        <option value="@platform.Value">
                            @platform.Text
                        </option>
                    }
                </select>
                <span asp-validation-for="LearningPlatformActivities" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-secondary" asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>

