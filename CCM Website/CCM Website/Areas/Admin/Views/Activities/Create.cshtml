@model CCM_Website.Models.Activities

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    var selectedPlatformId = ViewBag.SelectedPlatformId ?? 0; // This would be set when you post the form

}

<h1>Create</h1>

<h4>Activities</h4>
<hr />
@Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <div class="form-group">
                <label asp-for="ActivityName" class="control-label"></label>
                <input asp-for="ActivityName" class="form-control" />
                <span asp-validation-for="ActivityName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LearningPlatformActivities" class="control-label"></label>
                <select asp-for="LearningPlatformActivities" class="form-select form-control">
                    <option value="">-- Select a Platform --</option>
                    @foreach (var platform in ViewBag.LearningPlatforms as SelectList)
                    {
                        <option value="@platform.Value">
                            @platform.Text
                        </option>
                    }
                </select>
                <span asp-validation-for="LearningPlatformActivities" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-secondary" asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>

