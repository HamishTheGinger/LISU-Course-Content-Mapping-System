@model IEnumerable<CCM_Website.Models.TaskApproach>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ApproachName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ApproachName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ApproachId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ApproachId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ApproachId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
