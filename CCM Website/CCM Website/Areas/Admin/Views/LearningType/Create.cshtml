@model CCM_Website.Models.LearningType

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create Learning Type</h1>

<h4>Learning Type</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LearningTypeName" class="control-label"></label>
                <input asp-for="LearningTypeName" class="form-control" />
                <span asp-validation-for="LearningTypeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LearningTypeColour" class="control-label"></label>
                <input asp-for="LearningTypeColour" class="form-control" />
                <span asp-validation-for="LearningTypeColour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LearningTypeTextColour" class="control-label"></label>
                <input asp-for="LearningTypeTextColour" class="form-control" />
                <span asp-validation-for="LearningTypeTextColour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-secondary" asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>

