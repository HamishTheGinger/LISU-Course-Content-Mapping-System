@model CCM_Website.Models.LearningType

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb d-flex justify-content-start">
        <li><button class="btn btn-primary me-3" onclick="history.back();">Back</button></li>
        <div class="d-flex m-2">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Admin" asp-action="Index">Admin</a></li>
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="LearningType" asp-action="Index">Learning Type</a></li>
            <li class="breadcrumb-item active" aria-current="page">Edit</li>
        </div>
    </ol>
    <hr/>
</nav>

<div class="row my-3 align-items-start">
    <div class="col-md-10"><h2>Edit Learning Type</h2></div>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LearningTypeId" />
            <div class="form-group">
                <label asp-for="LearningTypeName" class="control-label">Learning Type Name</label>
                <input asp-for="LearningTypeName" class="form-control" />
                <span asp-validation-for="LearningTypeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LearningTypeColour" class="control-label">Learning Type Colour</label>
                <input asp-for="LearningTypeColour" class="form-control" />
                <span asp-validation-for="LearningTypeColour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LearningTypeTextColour" class="control-label">Learning Type Text Colour</label>
                <input asp-for="LearningTypeTextColour" class="form-control" />
                <span asp-validation-for="LearningTypeTextColour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LearningTypeDescription" class="control-label">Learning Type Description</label>
                <textarea asp-for="LearningTypeDescription" class="form-control" rows="5"></textarea>
                <span asp-validation-for="LearningTypeDescription" class="text-danger"></span>
            </div>

            <br/>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
                <a class="btn btn-secondary" asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>

