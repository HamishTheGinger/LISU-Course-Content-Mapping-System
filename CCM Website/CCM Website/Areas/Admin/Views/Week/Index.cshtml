@model IEnumerable<CCM_Website.Models.Week>

@{
    ViewData["Title"] = "Week";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Admin" asp-action="Index">Admin</a></li>
        <li class="breadcrumb-item active" aria-current="page">Week</li>
    </ol>
</nav>

<div class="row">
    <div class="col"><h1>Week</h1></div>
    <div class="col text-end"><button class="btn btn-primary" onclick="history.back();">Back</button></div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.WeekNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Workbook.CourseName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.WeekNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Workbook.CourseName)
            </td>
            <td>
                <a class="btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.WeekId">Edit</a>
                <a class="btn-sm btn-secondary" asp-action="Details" asp-route-id="@item.WeekId">Details</a>
                <a class="btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.WeekId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
