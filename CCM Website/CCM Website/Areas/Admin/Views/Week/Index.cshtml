@model IEnumerable<CCM_Website.Models.Week>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.WeekNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Workbook.CourseName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.WeekNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Workbook.CourseName)
            </td>
            <td>
                <a class="btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.WeekId">Edit</a>
                <a class="btn-sm btn-secondary" asp-action="Details" asp-route-id="@item.WeekId">Details</a>
                <a class="btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.WeekId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
