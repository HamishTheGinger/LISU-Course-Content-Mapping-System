@model CCM_Website.Models.Week

@{
    ViewData["Title"] = "Week Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Admin" asp-action="Index">Admin</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Week" asp-action="Index">Week</a></li>
        <li class="breadcrumb-item active" aria-current="page">Details</li>
    </ol>
</nav>

<div class="row">
    <div class="col"><h1>Week Details</h1></div>
    <div class="col text-end"><button class="btn btn-primary" onclick="history.back();">Back</button></div>
</div>

<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.WeekNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WeekNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Workbook)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Workbook.WorkbookId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Workbook.CourseName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Workbook.CourseName)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.WeekId">Edit</a>
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>
