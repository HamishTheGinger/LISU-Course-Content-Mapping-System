@{
    ViewData["Title"] = "Admin Panel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item active" aria-current="page">Admin</li>
    </ol>
</nav>

<div class="row">
    <div class="col"><h1>Admin Panel</h1></div>
    <div class="col text-end"><button class="btn btn-primary" onclick="history.back();">Back</button></div>
</div>

<div>
    <h2>Manage Workbooks</h2>
    <hr/>
    <a class="btn btn-primary" asp-area="Admin" asp-controller="Workbook" asp-action="Index">
        View Workbooks
    </a>
</div>
<br/>
<div>
    <h2>Manage Fields</h2>
    <hr/>
    <a class="btn btn-primary" asp-area="Admin" asp-controller="Activities" asp-action="Index">
        Activities
    </a>
    <a class="btn btn-primary" asp-area="Admin" asp-controller="GraduateAttribute" asp-action="Index">
        Graduate Attributes
    </a>
    <a class="btn btn-primary" asp-area="Admin" asp-controller="LearningPlatform" asp-action="Index">
        Learning Platforms
    </a>
    <a class="btn btn-primary" asp-area="Admin" asp-controller="LearningType" asp-action="Index">
        Learning Types
    </a>
    <a class="btn btn-primary" asp-area="Admin" asp-controller="TaskLocation" asp-action="Index">
        Weekly Activity Locations
    </a>
    <a class="btn btn-primary" asp-area="Admin" asp-controller="TaskProgressStatus" asp-action="Index">
        Weekly Activity Progress Status
    </a>
    <a class="btn btn-primary" asp-area="Admin" asp-controller="TaskApproach" asp-action="Index">
        Weekly Activity Approach
    </a>
</div>
<br/>
<div>
    <h2>Links and Dependency Tables</h2>
    <hr/>
    <p>This section should only be used to edit values if there is an issue occuring that cannot be fixed on the user pages.</p>
    <a class="btn btn-danger" asp-area="Admin" asp-controller="Week" asp-action="Index">
        Weeks
    </a>
    <a class="btn btn-danger" asp-area="Admin" asp-controller="WeekActivities" asp-action="Index">
        Weekly Activities Link
    </a>
</div>
