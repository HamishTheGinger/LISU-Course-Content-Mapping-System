@model CCM_Website.Models.Workbook

@{
    ViewData["Title"] = "Workbook Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h4>@Html.DisplayFor(model => model.CourseName)</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CourseName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CourseCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CourseLead)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseLead)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LearningPlatform)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LearningPlatform.PlatformName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CourseLength)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseLength)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastEdited)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastEdited)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.WorkbookId">Edit Workbook</a>
    <a class="btn btn-secondary" asp-action="Index">Workbook List</a>
</div>
