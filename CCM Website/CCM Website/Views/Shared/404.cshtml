@model ErrorViewModel
@{
    ViewData["Title"] = "Error 404";
}

<div>
    <div>
        <h2>Page Not Found</h2>
        <hr/>
        <h4>The page you are looking for cannot be found on the system / or no longer exists</h4>
    </div>
    <br/>
    <div>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Home</a>
        @if (User.IsInRole("Admin")) {
            <a authorization policy="Admin" asp-area="Admin" asp-controller="Admin" asp-action="Index" class="btn btn-primary">Admin</a>
        }
    </div>
</div>


