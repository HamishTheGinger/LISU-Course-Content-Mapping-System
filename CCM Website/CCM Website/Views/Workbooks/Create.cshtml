@model CCM_Website.Models.Workbook

@{
    ViewData["Title"] = "Create Workbook";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h4>Please enter the details for your new workbook</h4>
    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="CourseName" class="control-label"></label>
            <input asp-for="CourseName" class="form-control" />
            <span asp-validation-for="CourseName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CourseCode" class="control-label"></label>
            <input asp-for="CourseCode" class="form-control" placeholder="Enter Course Code" />
            <span asp-validation-for="CourseCode" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CourseLead" class="control-label"></label>
            <input asp-for="CourseLead" class="form-control" />
            <span asp-validation-for="CourseLead" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CourseLength" class="control-label"></label>
            <input  value="11" disabled class="form-control" />
            <input type="hidden" asp-for="CourseLength" value="11" class="form-control" />
            <span asp-validation-for="CourseLength" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LearningPlatformId" class="control-label">Learning Platform</label>
            <input  value="1" disabled class="form-control" />
            <input type="hidden" asp-for="LearningPlatformId" value="1" class="form-control" />
            <span asp-validation-for="LearningPlatformId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Collaborators" class="control-label"></label>
            <textarea asp-for="Collaborators" class="form-control" placeholder="Enter Collaborators, separated by commas"></textarea>
            <span asp-validation-for="Collaborators" class="text-danger"></span>
        </div>
        <br/>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
